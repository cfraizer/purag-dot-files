#!/bin/bash

# copy the contents of file $1 to X clipboard
fcopy () {
  [ ! -f "$1" ] \
    && echo "$(tput setaf 1)$1 is not a valid file" \
    && return 1
  xclip -sel clip < "$1"
  echo "$(tput setaf 2)copied contents of $1 to clipboard"
}

notify () {
  [[ -z "${@// }" ]] \
    && echo "$(tput setaf 1)no command specified" \
    && return 1
  "$@" \
    && pb push -d 1 <<< ""$@": succeeded!" \
    || pb push -d 1 <<< ""$@": failed :("
}
